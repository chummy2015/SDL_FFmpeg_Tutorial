<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放网络流"
        android:onClick="clickSDLTest"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/url"
        android:text="rtmp://192.168.30.2/oflaDemo/test"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FFmpeg推流"
        android:onClick="clickSDLPlayer"/>

    <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="案例二：实现SDL播放PCM文件"-->
        <!--android:onClick="clickPcmVoice"/>-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="案例：推送本地文件"
        android:onClick="clickStreamPush"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="案例：使用ANativeWindow播放视频"
        android:onClick="clickNative"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/path"
        android:text="屌丝男士.mov"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="案例：使用OpenSL+ANativeWindow播放直播流"
        android:onClick="clickOpenSL"/>
</LinearLayout>
